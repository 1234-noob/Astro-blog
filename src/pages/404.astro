---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center gap-7">
    <Image
      src={error}
      alt="error-image"
      class="mt-10"
      width={250}
      height={250}
    />
    <h1 class="text-5xl">Page Not Found</h1>
    <p class="text-2xl">Sorry, we couldn't find the page you are looking for</p>
    <a
      href="/"
      class="inline-block text-black bg-gray-400 p-2 mb-6 hover:bg-indigo-500 hover:text-white"
      >Go Back Home</a
    >
  </div>
</MainLayout>
